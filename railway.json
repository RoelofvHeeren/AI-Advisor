{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "node",
                "python"
            ],
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "ffmpeg"
                    ]
                },
                "install": {
                    "cmds": [
                        "npm install",
                        "pip install -r requirements.txt"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "npm run start"
    }
}