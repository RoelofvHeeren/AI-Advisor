{
    "manifest_version": 3,
    "name": "AI Advisor Knowledge Collector",
    "version": "1.0.5",
    "description": "Quickly save YouTube videos, web pages, and PDFs to your AI Advisors",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "<all_urls>"
    ],
    "action": {
        "default_title": "Open AI Advisor",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "youtube-collector.js"
            ],
            "css": [
                "youtube-collector.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}